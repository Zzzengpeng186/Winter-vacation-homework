/* pages/cate/cate.wxss */
page {
  height: 100%;
}
.container {
  flex-flow: row;
  height: 100%;
}
.cate {
  width: 100%;
  /* height: 506px; */
  height: calc(100vh - 98rpx);
  display: flex;
  margin-top: 98rpx;
}
.left {
  flex: 2;
  /* width: 180rpx; */
}

.left view {
  position: relative;

  width: 100%;
  height: 120rpx;
  background-color: #f7f7f7;
  /* text-align: center; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.left view.active {
  background-color: #fff;
}

.left view.active.active::before {
  content: " ";
  display: block;
  width: 3px;
  height: 30px;
  background-color: #c00000;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
.right {
  flex: 5;
  height: calc(100vh - 98rpx);

  /* background-color: pink; */
}

.goods_title {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  color: #ccc;
}

.goods_title text {
  padding: 0 10rpx;
  color: #000;
}
.goods_list {
  display: flex;
  flex-wrap: wrap;
}

.goods_list  navigator {
  width: 33.33%;
  text-align: center;
  margin-bottom: 60rpx;
}

.goods_list navigator image {
  width: 50%;
  height: 100%;
}
